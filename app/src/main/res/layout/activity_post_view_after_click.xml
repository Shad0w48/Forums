<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostViewAfterClick">



    <Button
        android:id="@+id/btnViewingBackToMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="20dp"
        android:text="חזור"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/tvTitleViewingPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="192dp"
        android:layout_marginTop="28dp"
        android:text="Title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvForumAndUserViewingPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="25dp"
        android:text="Forum+user"
        app:layout_constraintEnd_toEndOf="@+id/tvTitleViewingPost"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleViewingPost" />

    <TextView
        android:id="@+id/tvContentViewingPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="18dp"
        android:text="Content"
        app:layout_constraintEnd_toStartOf="@+id/tvViewingPostTime"
        app:layout_constraintTop_toBottomOf="@+id/tvForumAndUserViewingPost" />

    <ImageView
        android:id="@+id/imgViewingPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="244dp"
        app:layout_constraintBottom_toTopOf="@+id/btnViewingBackToMain"
        app:layout_constraintStart_toEndOf="@+id/btnViewingBackToMain"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvViewingPostTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="36dp"
        android:text="Time"
        app:layout_constraintBottom_toTopOf="@+id/tvContentViewingPost"
        app:layout_constraintStart_toEndOf="@+id/tvTitleViewingPost" />

    <TextView
        android:id="@+id/tvPostVotesCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="number of votes"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="579dp" />

    <Button
        android:id="@+id/btnPostUpVote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="up vote"
        tools:layout_editor_absoluteX="146dp"
        tools:layout_editor_absoluteY="578dp" />

    <Button
        android:id="@+id/btnPostDownVote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="down vote"
        tools:layout_editor_absoluteX="253dp"
        tools:layout_editor_absoluteY="578dp" />

</androidx.constraintlayout.widget.ConstraintLayout>